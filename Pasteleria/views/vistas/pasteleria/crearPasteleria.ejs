<div class="container">
  <h2>Añadir Pastelería</h2>
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <form action="/Pasteleria/CrearPasteleria" method="post" autocomplete="off">
        <div class="form-group">
          <label for="nombres">Nombre</label>
          <input type="text" class="form-control" id="nombre" placeholder="Ingrese el nombre de su Pastelería"
                 name="nombre" required>
        </div>
        <div class="form-group">
          <label for="apellidos">Ciudad</label>
          <input type="text" class="form-control" id="ciudad"
                 placeholder="Ingrese la ciudad donde se encuentra su Pastelería" name="ciudad" required>
        </div>
        <div class="form-group">
          <label for="correo">Correo</label>
          <input type="email" class="form-control" id="correo" placeholder="Ingrese el correo de su pastelería"
                 name="correo" required>
        </div>
        <button type="submit" class="btn btn-success">Añadir Pastelería</button>
      </form>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>
